<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC
     "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.4.0//EN"
     "http://commons.apache.org/dtds/validator_1_4_0.dtd">

<form-validation>
   <global>
      <validator name="required"
                 classname="com.cfm.bankinterface.validatetool.rule.DefaultValidateRule"
                 method="validateRequired"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.required"/>
      <validator name="date"
                 classname="com.cfm.bankinterface.validatetool.rule.DefaultValidateRule"
                 method="validateData"
                 depends="required"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.date"/>
      <validator name="after"
                 classname="com.cfm.bankinterface.validatetool.rule.DefaultValidateRule"
                 method="validateDateAfter"
                 depends="date"
                 methodParams="java.lang.Object,org.apache.commons.validator.Field"
                 msg="errors.after"/>
   </global>
</form-validation>
